/dts-v1/;

#include "zynqmp-zcu102-rev1.0.dts"
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/jesd204/adxcvr.h>

&i2c1 {
	i2c@0 { /* HPC IIC */
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0>;

		eeprom@50 {
			compatible = "at24,24c02";
			reg = <0x50>;
		};

		ad7291@2f {
			compatible = "adi,ad7291";
			reg = <0x2f>;
		};
	};
};

/ {
	fpga_axi: fpga-axi@0 {
		interrupt-parent = <&gic>;
		compatible = "simple-bus";
		#address-cells = <0x1>;
		#size-cells = <0x1>;
		ranges = <0 0 0 0xffffffff>;

		// ad9625_dma
		rx_dma: rx-dmac@9c400000 {
			compatible = "adi,axi-dmac-1.00.a";
			reg = <0x9c400000 0x1000>;
			#dma-cells = <1>;
			interrupts = <0 109 IRQ_TYPE_LEVEL_HIGH>;
			clocks = <&zynqmp_clk 71>;

			adi,channels {
				#size-cells = <0>;
				#address-cells = <1>;

				dma-channel@0 {
					reg = <0>;
					adi,source-bus-width = <64>;
					adi,source-bus-type = <1>;
					adi,destination-bus-width = <64>;
					adi,destination-bus-type = <0>;
				};
			};
		};

		// ad9162_dma
		tx_dma: tx-dmac@9c420000 {
			compatible = "adi,axi-dmac-1.00.a";
			reg = <0x9c420000 0x1000>;
			#dma-cells = <1>;
			interrupts = <0 108 IRQ_TYPE_LEVEL_HIGH>;
			clocks = <&zynqmp_clk 71>;

			adi,channels {
				#size-cells = <0>;
				#address-cells = <1>;

				dma-channel@0 {
					reg = <0>;
					adi,source-bus-width = <256>;
					adi,source-bus-type = <0>;
					adi,destination-bus-width = <256>;
					adi,destination-bus-type = <1>;
				};
			};
		};

		// 84a00000 e in hdl
		axi_ad9162_core: axi-ad9162-hpc@84a04000 {
			compatible = "adi,axi-ad9162-1.0";
			reg = <0x84a00000 0x4000>;
			dmas = <&tx_dma 0>;
			dma-names = "tx";
			spibus-connected = <&dac0_ad9162>;
			//adi,axi-pl-fifo-enable;

			jesd204-device;
			#jesd204-cells = <2>;
			jesd204-inputs = <&axi_ad9162_jesd 0 0>;
		};

		// 84a9 0000
		axi_ad9162_jesd: axi-jesd204-tx@84a90000 {
			compatible = "adi,axi-jesd204-tx-1.0";
			reg = <0x84a90000 0x1000>;

			interrupts = <0 54 IRQ_TYPE_LEVEL_HIGH>;

			clocks = <&zynqmp_clk 71>, <&tx_adxcvr 1>, <&tx_adxcvr 0>;
			clock-names = "s_axi_aclk", "device_clk", "lane_clk";

			#clock-cells = <0>;
			clock-output-names = "jesd_dac_lane_clk";

			jesd204-device;
			#jesd204-cells = <2>;
			jesd204-inputs = <&tx_adxcvr 0 0>;
		};


		axi_ad9625_core: axi-ad9625-hpc@84a10000 {
			compatible = "adi,axi-ad9625-1.0";
			reg = <0x84a10000 0x10000>;
			dmas = <&rx_dma 0>;
			dma-names = "rx";
			spibus-connected = <&adc0_ad9625>;
		};


		axi_ad9625_jesd: axi-jesd204-rx@84aa0000 {
			compatible = "adi,axi-jesd204-rx-1.0";
			reg = <0x84aa0000 0x1000>;

			interrupts = <0 55 IRQ_TYPE_LEVEL_HIGH>;

			clocks = <&zynqmp_clk 71>, <&rx_adxcvr 1>, <&rx_adxcvr 0>;
			clock-names = "s_axi_aclk", "device_clk", "lane_clk";

			adi,octets-per-frame = <1>;
			adi,frames-per-multiframe = <32>;
			adi,subclass = <0>;

			#clock-cells = <0>;
			clock-output-names = "jesd_adc_lane_clk";
		};

		// ad9635_xcvr
		rx_adxcvr: axi-adxcvr-rx@84a50000 {
			compatible = "adi,axi-adxcvr-1.0";
			reg = <0x84a50000 0x1000>;

			clocks = <&adc_divclk>;
			clock-names = "conv";

			#clock-cells = <1>;
			clock-output-names = "adc_gt_clk", "rx_out_clk";

			adi,sys-clk-select = <XCVR_CPLL>;
			adi,out-clk-select = <XCVR_OUTCLK_PMA>;
			adi,use-lpm-enable;
		};

		// ad9162_xcvr
		tx_adxcvr: axi-adxcvr-tx@84a60000 {
			compatible = "adi,axi-adxcvr-1.0";
			reg = <0x84a60000 0x1000>;
			clocks = <&adc0_ad9625>;
			clock-names = "conv";

			#clock-cells = <1>;
			clock-output-names = "dac_gt_clk", "tx_out_clk";

			adi,sys-clk-select = <XCVR_QPLL>;
			adi,out-clk-select = <XCVR_OUTCLK_PMA>;

			jesd204-device;
			#jesd204-cells = <2>;
		};
	};
};

&spi0 {
	status = "okay";
	is-decoded-cs = <1>;
	num-cs = <7>;
};

#define fmc_spi spi0

#include "adi-fmcomms11.dtsi"

&adc0_ad9625 {
	irq-gpios = <&gpio 111 0>; /* 33, ad9625_irq */
};

&dac0_ad9162 {
	txen-gpios = <&gpio 112 0>; /* 34, ad9162_txen */
	irq-gpios = <&gpio 110 0>; /* 32, ad9162_irq */
};

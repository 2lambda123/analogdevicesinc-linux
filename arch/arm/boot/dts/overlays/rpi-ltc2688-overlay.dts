/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835", "brcm,bcm2708", "brcm,bcm2709";

	fragment@0 {
		target-path = "/";
		__overlay__ {
		vref: fixedregulator@0 {
				compatible = "regulator-fixed";
				regulator-name = "fixed-supply";
				regulator-min-microvolt = <2048000>;
				regulator-max-microvolt = <2048000>;
			};
		};
	};

	fragment@1 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			ltc2688@0 {
				compatible = "adi,ltc2688";
				reg = <0>;
				spi-max-frequency = <5000000>;

				#address-cells = <1>;
				#size-cells = <0>;

				vref-supply = <&vref>;

				channel@0 {
					reg = <0>;
					adi,output-range-millivolt = <0 5000>;
					adi,toggle-dither-clk-input = <3>;
					adi,overrange;
				};

				channel@1 {
					reg = <1>;
					adi,output-range-millivolt = <(-5000) 5000>;
					adi,toggle-dither-clk-input = <0>;
				};

				channel@2 {
					reg = <2>;
					adi,output-range-millivolt = <(-15000) 15000>;
					adi,toggle-dither-clk-input = <0>;
				};

				channel@3 {
					reg = <3>;
					adi,output-range-millivolt = <(-10000) 10000>;
					adi,toggle-dither-clk-input = <0>;
				};

				channel@4 {
					reg = <4>;
					adi,output-range-millivolt = <0 10000>;
					adi,toggle-dither-clk-input = <0>;
				};

			};
		};
	};

	fragment@3 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@4 {
		target = <&spidev1>;
		__overlay__ {
			status = "disabled";
		};
	};
};

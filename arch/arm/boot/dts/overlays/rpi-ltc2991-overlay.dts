/dts-v1/;
/plugin/;

/ {
	compatible = "bcrm, bcm2711";

	vcc: regulator {
		compatible = "regulator-fixed";
		regulator-name = "vcc";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		regulator-boot-on;
		regulator-always-on;
	};
};

&i2c1 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	ltc2991@48 {
		compatible = "adi,ltc2991";
		reg = <0x48>;

		channel@0 {
			reg = <0x0>;
			shunt-resistor-mili-ohms = <100>;
		};

		channel@1 {
			reg = <0x1>;
			temperature-enable;
		};
	};
};

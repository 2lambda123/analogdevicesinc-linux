/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2c0>;

		frag0: __overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			iio_regmap_i2c@1 {
				reg = <1>;
				spi-max-frequency = <1000000>;
				compatible = "iio-regmap-i2c";
				status = "okay";
			};
		};
	};

	fragment@1 {
		target = <&spi0>;

		frag1: __overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			iio_regmap_spi@0 {
				reg = <0>;
				spi-max-frequency = <1000000>;
				compatible = "iio-regmap-spi";
				status = "okay";
			};
		};
	};

};

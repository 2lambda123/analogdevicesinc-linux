/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

&spidev0 {
	status = "disabled";
};

&spidev1 {
	status = "disabled";
};

&spi0 {
	status = "okay";

	tmc5271@0{
		compatible = "adi,tmc5271";
		reg = <0>;
		spi-max-frequency = <1600000>;
		spi-cpol;
		spi-cpha;
		sleep-gpios = <&gpio 25 GPIO_ACTIVE_HIGH>;
	};
};

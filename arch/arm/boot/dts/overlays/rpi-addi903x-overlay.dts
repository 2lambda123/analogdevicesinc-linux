// Definitions for ADDI903x camera module
/dts-v1/;
/plugin/;

/{
	compatible = "brcm,bcm2708";

	fragment@0 {
		target = <&i2c_vc>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			camera_front@64 {
				compatible = "adi,addi903x";
				reg = <0x64>;

				reset-gpios = <&gpio 41 1>;

				clocks = <&addi903x_clk>;
				clock-names = "xclk";
				clock-frequency = <135000000>;

				addi903x_clk: camera-clk {
					compatible = "fixed-clock";
					#clock-cells = <0>;
					clock-frequency = <135000000>;
				};

				port {
					addi903x_ep: endpoint {
						remote-endpoint = <&csi1_ep>;
						clock-lanes = <0>;
						data-lanes = <1 2>;
					};
				};
			};
		};
	};

	fragment@1 {
		target = <&csi1>;
		__overlay__ {
			status = "okay";

			port {
				csi1_ep: endpoint {
					remote-endpoint = <&addi903x_ep>;
				};
			};
		};
	};

	fragment@2 {
		target = <&i2c0_pins>;
		__overlay__ {
			brcm,pins = <44 45>;
			brcm,function = <5>; /* alt1 */
		};
	};

	fragment@3 {
		target = <&i2c_vc>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4 {
		target = <&i2c1>;
		__overlay__ {
			pinctrl-0 = <&i2c1_pins>;
			status = "okay";
		};
	};

	fragment@5 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			eeprom: eeprom@56 {
				compatible = "atmel,24c1024";
				reg = <0x56>;
				pagesize = <32>;
			};
		};
	};

	fragment@6 {
		target = <&i2c1_pins>;
		__overlay__ {
			brcm,pins = <2 3>;
			brcm,function = <4>; /* alt 0 */
		};
	};
};
